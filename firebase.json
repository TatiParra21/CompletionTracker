{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],    
    "headers":[
      {
        "source":"**",
        "headers":[
          {
            "key":"Cross-Origin-Opener-Policy",
            "value": "same-origin"
          },
          {
            "key":"Cross-Origin-Embedder-Policy",
            "value":"credentialless"
          },
          {
            "key": "Referrer-Policy",
            "value": "no-referrer"
          },
          {
            "key":"Cross-Origin-Resource-Policy",
            "value":"cross-origin"
          }
  
        ]
        
      }
        
      ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]

  }
}
